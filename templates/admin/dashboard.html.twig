{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title %}Dashboard{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h1>Welcome to TheEndPage Admin Dashboard</h1>
                    <p class="text-muted">Manage your content, users, and settings from here.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        {# Quick Stats #}
        <div class="col-lg-3 col-md-6">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total End Pages</h5>
                    <p class="card-text display-4">{{ counts.endPages }}</p>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Users</h5>
                    <p class="card-text display-4">{{ counts.users }}</p>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Comments</h5>
                    <p class="card-text display-4">{{ counts.comments }}</p>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Media</h5>
                    <p class="card-text display-4">{{ counts.medias }}</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        {# Quick Actions #}
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a href="{{ ea_url().setController('App\\\\Controller\\\\Admin\\\\EndPagesCrudController').setAction('new') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-plus me-2"></i> Create New End Page
                        </a>
                        <a href="{{ ea_url().setController('App\\\\Controller\\\\Admin\\\\UsersCrudController').setAction('new') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-user-plus me-2"></i> Add New User
                        </a>
                        <a href="{{ ea_url().setController('App\\\\Controller\\\\Admin\\\\MediasCrudController').setAction('new') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-upload me-2"></i> Upload Media
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">System Information</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2"><i class="fas fa-server me-2"></i> Environment: {{ app.environment }}</li>
                        <li class="mb-2"><i class="fas fa-clock me-2"></i> Server Time: {{ 'now'|date('Y-m-d H:i:s') }}</li>
                        <li class="mb-2"><i class="fas fa-user me-2"></i> Logged in as: {{ app.user ? app.user.email : 'Unknown' }}</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 